<h1>Server Logs</h1>

<button class="btn btn-primary" @onclick="OnRefresh">Refresh</button>

<div>
    <ul>
        @foreach (var item in logs)
        {
            <li>
                @item
            </li>
        }
    </ul>
</div>

@page "/serverlogs"
@inject IEmbedServer ServerLogsService;

@code 
{
    private IEnumerable<string> logs = Enumerable.Empty<string>();

    private void OnRefresh()
    {
        logs = ServerLogsService.GetLogs();
        this.StateHasChanged();
    }
}