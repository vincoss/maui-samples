<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Blazor_AppWithWebServer_EmbedIO.Pages.WebViewPage"
             Title="WebViewPage"
             NavigationPage.HasNavigationBar="False"
             x:Name="thisPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Button Grid.Row="0" Text="Back" Clicked="Button_Clicked"/>
        <WebView Grid.Row="1" Source="{Binding SourceUrl}"/>
    </Grid>
    
</ContentPage>