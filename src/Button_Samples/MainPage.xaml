<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Button_Samples.MainPage"
	         Title="Button_Samples">

    <!-- Square button-->
    <VerticalStackLayout>
        <HorizontalStackLayout>

            <Button Text="CA"
        x:Name="btn1" FontSize="Title"
        VerticalOptions="CenterAndExpand"
        HorizontalOptions="Center"
            HeightRequest="{Binding Width, Source={x:Reference btn1}}"/>

            <Button Text="SA"
        x:Name="btn2" FontSize="Title"
        VerticalOptions="CenterAndExpand"
        HorizontalOptions="Center"
        HeightRequest="{Binding Width, Source={x:Reference btn2}}"/>
        </HorizontalStackLayout>

        <Button Text="Save With Tooltip" ToolTipProperties.Text="Click to save your comment" />

    </VerticalStackLayout>

</ContentPage>
