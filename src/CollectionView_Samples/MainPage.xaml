<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CollectionView_Samples.MainPage"
             Title="CollectionView samples">


    <StackLayout>
        <Label Text="Pages"/>
        <ListView x:Name="ListOfPages" ItemSelected="ItemSelected" SeparatorColor="Red" SeparatorVisibility="Default">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Label Text="{Binding}" TextColor="#696969" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
    
</ContentPage>
