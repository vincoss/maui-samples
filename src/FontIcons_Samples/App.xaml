<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:windows="clr-namespace:Microsoft.Maui.Controls.PlatformConfiguration.WindowsSpecific;assembly=Microsoft.Maui.Controls"
             xmlns:local="clr-namespace:FontIcons_Samples"
             x:Class="FontIcons_Samples.App"
             windows:Application.ImageDirectory="Assets">
    <Application.Resources>
        <ResourceDictionary>

            <!--
                https://fontello.com/
            -->
            <OnPlatform x:Key="Fontello" x:TypeArguments="x:String">
                <On Platform="Android" Value="fontello.ttf#fontello" />
                <On Platform="iOS" Value="udar-icons" />
                <On Platform="UWP" Value="/Assets/Fonts/fontello.ttf#fontello" />
            </OnPlatform>

        </ResourceDictionary>
    </Application.Resources>
</Application>
