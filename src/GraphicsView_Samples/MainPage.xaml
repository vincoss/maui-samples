<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GraphicsView_Samples.MainPage"
             xmlns:drawable="clr-namespace:GraphicsView_Samples"
             Title="GraphicsView_Samples">

    <StackLayout>
        <Label Text="Samples" FontSize="Title" BackgroundColor="#DCDCDC"/>
        <CollectionView x:Name="ListOfPages" SelectionChanged="ListOfPages_SelectionChanged" SelectionMode="Single">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Label Text="{Binding}" TextColor="SteelBlue" TextDecorations="Underline" Padding="5" />
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </StackLayout>
 
</ContentPage>
