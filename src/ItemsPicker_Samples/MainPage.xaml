<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ItemsPicker_Samples.MainPage"
             Title="Items Picker Sample">

    <VerticalStackLayout>
        <Label Text="Items picker sample" FontSize="Title" BackgroundColor="Orange"/>
        
        <!-- Single -->
        <Label Text="Single item picker" FontSize="Large" BackgroundColor="Green"/>
        <VerticalStackLayout>
            <VerticalStackLayout.GestureRecognizers>
                <TapGestureRecognizer Command="{Binding SelectKeywordCommand}" 
                                      CommandParameter="{Binding Keyword}"/>
            </VerticalStackLayout.GestureRecognizers>
            <Label Text="Keywords"/>
            <Label Text="{Binding Keyword}"/>
            <BoxView HeightRequest="1" Color="Black" HorizontalOptions="FillAndExpand" Margin="0,0,0,5"/>
        </VerticalStackLayout>

        <!-- Multiple -->

    </VerticalStackLayout>
   
    
</ContentPage>
