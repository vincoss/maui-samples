<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ItemsPicker_Samples.MainPage"
             Title="Items Picker Sample">

    <VerticalStackLayout>
        <Label Text="Items picker sample" FontSize="Title" BackgroundColor="Orange"/>
        <HorizontalStackLayout BackgroundColor="Yellow">
            <Label Text="Is single selection:" Margin="5" HorizontalOptions="StartAndExpand"/>
            <CheckBox IsChecked="{Binding IsSingleSelection}" HorizontalOptions="End"/>
        </HorizontalStackLayout>

        <VerticalStackLayout>
            <VerticalStackLayout.GestureRecognizers>
                <TapGestureRecognizer Command="{Binding SelectFrameworksCommand}" 
                                      CommandParameter="{Binding Frameworks}"/>
            </VerticalStackLayout.GestureRecognizers>
            <Label Text="Frameworks"/>
            <Label Text="{Binding Frameworks}" FontSize="Caption"/>
            <BoxView HeightRequest="1" Color="Black" HorizontalOptions="FillAndExpand" Margin="0,0,0,5"/>
        </VerticalStackLayout>

    </VerticalStackLayout>
   
    
</ContentPage>
