<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Label_Samples.MainPage"
             Title="Label samples">

    <VerticalStackLayout>
        <Label Text="Samples" FontSize="Title" BackgroundColor="#DCDCDC"/>
        <CollectionView x:Name="ListOfPages" SelectionChanged="ListOfPages_SelectionChanged" SelectionMode="Single">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Label Text="{Binding}" TextColor="SteelBlue" TextDecorations="Underline" Padding="5" />
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
    
</ContentPage>
