<VerticalStackLayout xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Spacing="15"
             x:Class="Mix_Samples.Views.Components.UserDetailView"
             BackgroundColor="GreenYellow">

    <Label Text="First Name" HorizontalOptions="Center"/>

    <Border BackgroundColor="Orange"
            Stroke="Transparent"
            StrokeThickness="1"
            HorizontalOptions="Center"
            Padding="15,4"
            >
        <Border.StrokeShape>
            <RoundRectangle CornerRadius="60"/>
        </Border.StrokeShape>
        <Label
                    Text="Open"
                    HorizontalOptions="Center"
                    FontSize="18"/>
    </Border>


</VerticalStackLayout>