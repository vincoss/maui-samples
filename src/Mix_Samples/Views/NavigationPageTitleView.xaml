<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Mix_Samples.Views.NavigationPageTitleView"
             Title="NavigationPageTitleView">

    <!--
    https://docs.microsoft.com/en-us/xamarin/xamarin-forms/app-fundamentals/navigation/hierarchical
    -->

    <NavigationPage.TitleView>
        <HorizontalStackLayout BackgroundColor="Transparent" Padding="0" Margin="0">
            <Label Grid.Column="0" Text="Create Group" FontSize="Large" HorizontalOptions="Start" VerticalOptions="CenterAndExpand" LineBreakMode="NoWrap"/>
            <Button Grid.Column="1" Text="CLOSE" HorizontalOptions="FillAndExpand" VerticalOptions="CenterAndExpand" />
            <Button Grid.Column="2" Text="SAVE" HorizontalOptions="FillAndExpand" VerticalOptions="CenterAndExpand" />
        </HorizontalStackLayout>
    </NavigationPage.TitleView>

    <ContentPage.Content>
        <VerticalStackLayout>
            <Label Text="TitleView Sample" />
        </VerticalStackLayout>
    </ContentPage.Content>

</ContentPage>
