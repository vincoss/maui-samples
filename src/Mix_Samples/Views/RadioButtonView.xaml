<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Mix_Samples.Views.RadioButtonView"
             xmlns:ios="clr-namespace:Microsoft.Maui.Controls.PlatformConfiguration.iOSSpecific;assembly=Microsoft.Maui.Controls"
             ios:Page.UseSafeArea="True"
             Title="RadioButton Samples">

    <VerticalStackLayout HorizontalOptions="FillAndExpand" BackgroundColor="AliceBlue" Padding="10">
        <RadioButton Content="Default" />
        <RadioButton IsChecked="True" Content="Alignment Issue - Font Title" FontSize="Title" BackgroundColor="Pink" />
        <RadioButton>
            <RadioButton.Content>
                <Label Text="Label Default Size"/>
            </RadioButton.Content>
        </RadioButton>
        <HorizontalStackLayout>
            <RadioButton IsChecked="True" Margin="0" Padding="0" BorderColor="Red" BorderWidth="1"/>
            <Label Text="Radio and Label" FontSize="Title" HorizontalOptions="Start" VerticalOptions="CenterAndExpand"/>
        </HorizontalStackLayout>
        <RadioButton FontSize="Title" VerticalOptions="CenterAndExpand">
            <RadioButton.Content>
                Text Content
            </RadioButton.Content>
        </RadioButton>
    </VerticalStackLayout>
    
</ContentPage>
