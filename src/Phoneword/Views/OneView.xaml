<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Phoneword.Views.OneView"
             xmlns:xa="clr-namespace:Phoneword.Xaml"
             Title="OneView">
    <VerticalStackLayout>
        <Label 
            Text="Notes"
            VerticalOptions="Center"  FontAttributes="Bold" FontSize="{xa:GlobalFontSize}"
             TextColor="{x:Static Member=xa:SharedResources.FontColor}" 
            SemanticProperties.HeadingLevel="Level1" HorizontalOptions="CenterAndExpand"/>
        <Editor Placeholder="Enter your note" x:Name="editor"
                HeightRequest="{OnPlatform 100, Android=500, iOS=500}" />
        <Grid ColumnDefinitions="Auto, *, Auto">
            <Button Text="Save" Grid.Column="0" TextColor="{x:Static Member=xa:SharedResources.BackgroundColor}" />
            <Button Text="Delete" Grid.Column="2" TextColor="{x:Static Member=xa:SharedResources.BackgroundColor}" />
        </Grid>
    </VerticalStackLayout>
</ContentPage>