<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:co="clr-namespace:ViewModelIocSample;assembly=ViewModelIoc_Samples"
             co:PlatformViewModelLocator.AutoWireViewModel="true"
             x:Class="ViewModelIocSample.Views.HomeView"
             Title="{Binding Title}">

    <StackLayout>
        <Label Text="ViewModelIocSample"
                    SemanticProperties.HeadingLevel="Level1"
                    FontSize="32"
                    HorizontalOptions="CenterAndExpand" TextColor="#696969" />
        <Label Text="{Binding Title}" TextColor="#696969" />
    </StackLayout>
</ContentPage>